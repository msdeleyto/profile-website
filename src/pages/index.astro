---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Your Name - Professional Profile">
  <div class="container mx-auto px-4 py-16">
    <!-- Hero Section -->
    <section class="text-center mb-16">
      <h1 class="text-5xl font-bold mb-4 text-gray-900 dark:text-white">
        Hi, I'm <span class="text-blue-600 dark:text-blue-400">Your Name</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        Software Engineer | Full Stack Developer | Problem Solver
      </p>
      <p class="text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        Passionate about building elegant solutions to complex problems. 
        Experienced in web development, cloud architecture, and creating user-friendly applications.
      </p>
    </section>

    <!-- Skills Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center text-gray-900 dark:text-white">Skills & Technologies</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <h3 class="text-xl font-semibold mb-4 text-blue-600 dark:text-blue-400">Frontend</h3>
          <div class="flex flex-wrap gap-2 justify-center">
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">React</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">TypeScript</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">Tailwind</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">Astro</span>
          </div>
        </div>
        <div class="text-center">
          <h3 class="text-xl font-semibold mb-4 text-blue-600 dark:text-blue-400">Backend</h3>
          <div class="flex flex-wrap gap-2 justify-center">
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">Node.js</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">Python</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">PostgreSQL</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">REST APIs</span>
          </div>
        </div>
        <div class="text-center">
          <h3 class="text-xl font-semibold mb-4 text-blue-600 dark:text-blue-400">DevOps</h3>
          <div class="flex flex-wrap gap-2 justify-center">
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">Docker</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">AWS</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">CI/CD</span>
            <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 rounded-full text-sm">Git</span>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="text-center">
      <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Interested in working together?</h2>
      <a 
        href="www.linkedin.com/in/miguel-sanchez-devops"
        class="inline-block px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors"
      >
        Get in Touch
      </a>
    </section>
  </div>
</Layout>
