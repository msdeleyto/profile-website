---
import Layout from '../layouts/Layout.astro';
import IntroductionSection from '../sections/index/IntroductionSection.astro';
import CareerSection from '../sections/index/CareerSection.astro';
import SkillsSection from '../sections/index/SkillsSection.astro';
import ProjectsSection from '../sections/index/ProjectsSection.astro';
---

<Layout title="Miguel Sánchez - Professional Profile">
  <div class="snap-y snap-mandatory overflow-y-scroll h-screen bg-tech-bg">
    <IntroductionSection sectionIndex={0} />
    <CareerSection sectionIndex={1} />
    <SkillsSection sectionIndex={2} />
    <ProjectsSection sectionIndex={3} />
    
    <!-- Footer -->
    <footer class="fixed bottom-0 left-0 right-0 pb-8 text-center text-text-dim text-sm font-mono pointer-events-none">
      <p><span class="text-accent-primary">●</span> &copy; {new Date().getFullYear()}</p>
    </footer>
  </div>
</Layout>

<script>
  import '../scripts/scrollAnimation';
  import '../scripts/experienceCards';
</script>
