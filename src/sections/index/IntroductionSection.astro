---
import PageSection from '../../components/PageSection.astro';
import Section from '../../components/Section.astro';
import Text from '../../components/Text.astro';
import Link from '../../components/Link.astro';
import { introduction } from '../../data/introduction';

interface Props {
  sectionIndex: number;
}

const { sectionIndex } = Astro.props;
---

<PageSection sectionIndex={sectionIndex}>
  <Section>
    <Text variant="h1">
      {introduction.name}
    </Text>
    <div class="space-y-2">
      <Text variant="body" class="max-w-3xl">
        {introduction.description}
      </Text>
    </div>
    <div class="flex gap-6 mt-6">
      <Link href={introduction.social.github}>GitHub</Link>
      <Link href={introduction.social.linkedin}>LinkedIn</Link>
    </div>
  </Section>
</PageSection>
